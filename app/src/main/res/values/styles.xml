<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonRow">
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/button_operator</item>
    </style>

    <style name="buttonNumber">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
<!--        <item name="android:background">@drawable/button_design</item>-->
        <item name="android:background">@drawable/button_operator</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:onClick">numberAction</item>
        <item name="backgroundTint">@android:color/transparent</item>


    </style>

    <style name="buttonOperator">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
<!--        <item name="android:background">@drawable/button_operator</item>-->
        <item name="background">@null</item>
        <item name="android:textSize">25sp</item>
        <item name="android:onClick">operationAction</item>
        <item name="backgroundColor">@color/c1</item>

    </style>

    <style name="buttonOperatorCheck">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">25sp</item>
        <item name="android:onClick">operationAction</item>
<!--        <item name="background">@color/material_on_background_disabled</item>-->
        <item name="backgroundTint">@color/orange</item>
<!--        <item name="background">@color/almostBlack</item>-->

<!--        <item name="backgroundColor">#FFFFFF</item>-->


    </style>


</resources>